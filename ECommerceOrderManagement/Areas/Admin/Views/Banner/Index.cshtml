@model List<Banner>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 product-title">Banner List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Banner
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Banner Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var banner in Model)
                {
                    <tr>
                        <td>
                            <div>
                                <img src="@banner.ImageUrl" alt="Banner Image" class="col-4" />
                            </div>
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Upsert" asp-route-id="@banner.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <button class="btn btn-danger mx-2" onclick="Delete(@banner.Id)">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function Delete(id) {
            if (confirm("Are you sure you want to delete this banner?")) {
                $.post('/Admin/Banner/Delete/' + id, function (response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                });
            }
        }
    </script>
    <style>
        .product-title {
            color: white;
            font-weight: bold;
            font-family: 'Arial', sans-serif;
        }

        .table thead th {
            color: black;
            font-weight: bold;
        }
    </style>
}