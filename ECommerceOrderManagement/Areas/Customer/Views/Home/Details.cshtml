@model Cart
<h1 class="text-center mb-4">Product Details</h1>
<form method="post">

    <div class="row">
        <div class="col-4 text-center">
            <img src="@Model.Product.ImageUrl" width="250" class="img-fluid" alt="Product Image" />
            <input type="hidden" asp-for="ProductId"/>
        </div>
        <div class="col-8">
            <div class="mb-3">
                <label asp-for="Product.Name" class="form-label">Product Name:</label>
                <p>@Model.Product.Name</p>
            </div>
            <div class="mb-3">
                <label asp-for="Product.Price" class="form-label">Product Price:</label>
                <p>₹ @Model.Product.Price</p>
            </div>
            <div class="mb-3">
                <label asp-for="Product.Stock" class="form-label">Product Stock:</label>
                <p>@Model.Product.Stock</p>
            </div>
            <div class="mb-3">
                <label asp-for="Product.Category.Name" class="form-label">Product Category:</label>
                <p>@Model.Product.Category.Name</p>
            </div>
            <div class="mb-3">
                <label asp-for="Count" class="form-label">Quantity:</label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-success" asp-action="Index" asp-controller="Home">Back</a>
                <button type ="submit" class="btn btn-dark" asp-action="Details">Add to Cart</button>
            </div>
        </div>
    </div>
</form>
