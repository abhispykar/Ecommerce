@model IEnumerable<Product>

<div class="container py-5">
    <h2 class="mb-4 text-center">Search Results</h2>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">No products found matching your search criteria.</p>
    }
    else
    {
        <div class="d-flex flex-wrap justify-content-center">
            @foreach (var product in Model)
            {
                <a asp-action="Details" asp-controller="Home" asp-route-ProductId="@product.ProductId" class="card card-hover m-2 p-3" style="text-decoration:none">
                    <div class="" style="width:12rem;">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="object-fit: cover;">

                        <div class="card-body d-flex flex-column">
                            <p class="card-title h5 text-dark text-uppercase text-center mb-3 text-truncate">@product.Name</p>

                
                            <p class="card-title h5 text-dark text-center mb-3">₹ @product.Price</p>

                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">⭐⭐⭐⭐⭐</small>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    }
</div>

@section Scripts {
    <style>
        .card-hover {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        }
    </style>
}
