@model IEnumerable<Product>
<div class="container-fluid">
    <!-- Hero Section with Banner Images -->
    <section class="hero-section bg-light py-5">
            <h1 class="display-4 text-center mb-4">Welcome to Ride It Out</h1>
            <div class="row mt-4">
                <div class="col-md-8 offset-md-2">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Search for products..." aria-label="Search for products">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="button">Search</button>
                        </div>
                    </div>
                </div>
            </div>
    </section>
    <!-- Products Section -->
    <section class="trending-products py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-4">Products</h2>
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card h-100">
                            <img src="@product.ImageUrl" class="card-img-top" alt="Product" style="height: 200px; object-fit: cover;">
                            <div class="card-body d-flex flex-column">
                                <p class="card-title h5 text-dark text-uppercase text-center mb-3 text-truncate">@product.Name</p>
                                <p class="card-title h5 text-dark text-center mb-3">₹ @product.Price</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <a asp-action="Details" asp-controller="Home" asp-route-ProductId="@product.ProductId" class="btn btn-primary">Details</a>
                                    <small class="text-muted">⭐⭐⭐⭐⭐</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- Special Offers Section -->
    <section class="special-offers py-5">
        <div class="container">
            <h2 class="text-center mb-4">Special Offers</h2>
            <div class="row">
                @for (int i = 1; i <= 3; i++)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-header bg-danger text-white">
                                Limited Time Offer
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Special Offer @i</h5>
                                <p class="card-text">Get up to @(i * 10)% off on selected items!</p>
                                <a href="#" class="btn btn-primary">Shop Now</a>
                            </div>
                            <div class="card-footer text-muted">
                                Ends in: 2d 5h 30m
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- Customer Reviews -->
    <section class="customer-reviews py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-4">What Our Customers Say</h2>
            <div class="row">
                @for (int i = 1; i <= 3; i++)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">Customer @i</h5>
                                <p class="card-text">"Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean euismod bibendum laoreet."</p>
                                <p class="text-muted">⭐⭐⭐⭐⭐</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>

