@model IEnumerable<Product>
<div class="container-fluid">
    <!-- Hero Section with Banner Images -->
      <section class="hero-section bg-light py-5">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <ol class="carousel-indicators">
                <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
                <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
                <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/HP_Rotating_AP_18Nov2024_vithxu.webp" class="d-block w-100" alt="Banner 1">
                </div>
                <div class="carousel-item">
                    <img src="~/images/HP_Rotating_Geyser_18Nov2024_uo8tu3.webp" class="d-block w-100" alt="Banner 2">
                </div>
                <div class="carousel-item">
                    <img src="~/images/HP_Rotating_pixel_18Nov2024_pfayfv.webp" class="d-block w-100" alt="Banner 3">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </a>
        </div>
    </section> 

    <!-- Categories Section -->
    <section class="categories py-5">
        <div class="container text-center">
            <h2 class="mb-4">Shop by Categories</h2>
            <a asp-action="Categories" asp-controller="Home" class="btn btn-outline-primary btn-lg">
                Explore Categories
            </a>
        </div>
    </section>

    

    <!-- Products Section -->
    <section class="trending-products py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-4">Shop by Products</h2>
            <div class="d-flex flex-wrap justify-content-center">
                @foreach (var product in Model)
                {
                    <a asp-action="Details" asp-controller="Home" asp-route-ProductId="@product.ProductId" class="card card-hover m-2 p-3" style="text-decoration:none">
                        <div class="" style="width:12rem;">
                            <img src="@product.ImageUrl" class="card-img-top" alt="Product" style="object-fit: cover;">
                            <div class="card-body d-flex flex-column">
                                <p class="card-title h5 text-dark text-uppercase text-center mb-3 text-truncate">@product.Name</p>
                                <p class="card-title h5 text-dark text-center mb-3">₹ @product.Price</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">⭐⭐⭐⭐⭐</small>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </section>
    <!-- Special Offers Section -->
    <section class="special-offers py-5">
        <div class="container">
            <h2 class="text-center mb-4">Special Offers</h2>
            <div class="row">
                @for (int i = 1; i <= 3; i++)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-header bg-danger text-white">
                                Limited Time Offer
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Special Offer @i</h5>
                                <p class="card-text">Get up to @(i * 10)% off on selected items!</p>
                                <a href="#" class="btn btn-primary">Shop Now</a>
                            </div>
                            <div class="card-footer text-muted">
                                Ends in: 2d 5h 30m
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- Customer Reviews -->
    <section class="customer-reviews py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-4">What Our Customers Say</h2>
            <div class="row">
                @for (int i = 1; i <= 3; i++)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">Customer @i</h5>
                                <p class="card-text">"Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean euismod bibendum laoreet."</p>
                                <p class="text-muted">⭐⭐⭐⭐⭐</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <style>
        .card-hover {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card-hover:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
            }
    </style>
}