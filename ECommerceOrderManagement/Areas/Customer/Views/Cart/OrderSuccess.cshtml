@model EOMS.Models.OrderHeader

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Success</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="container mt-5">
        <div class="card text-center">
            <div class="card-header">
                <h2 class="card-title">Thank you for your purchase!</h2>
            </div>
            <div class="card-body">
                <p class="card-text">Your order has been successfully placed.</p>
                <h5 class="card-title">Order Details</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Order ID:</strong> @Model.Id
                    </li>
                    <li class="list-group-item">
                        <strong>Order Date:</strong> @Model.DateOfOrder.ToString("dd MMM yyyy")
                    </li>
                    <li class="list-group-item">
                        <strong>Order Status:</strong> @Model.OrderStatus
                    </li>
                    <li class="list-group-item">
                        <strong>Total Amount:</strong> @Model.OrderTotal.ToString("C", new System.Globalization.CultureInfo("en-IN"))
                    </li>
                </ul>
            </div>
            <div class="card-footer text-muted">
                We hope you enjoy your purchase. Please contact us if you have any questions.
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
