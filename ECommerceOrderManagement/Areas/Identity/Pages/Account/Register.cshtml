@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    .register-container {
        max-width: 480px; /* Increased width */
        margin: auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
        background-color: #fff;
    }

        .register-container h1 {
            font-size: 24px;
            margin-bottom: 10px;
            color: #333;
        }

        .register-container h2 {
            font-size: 20px;
            color: #555;
            margin-bottom: 20px;
        }

        .register-container .form-floating label {
            color: #666;
        }

        .register-container .form-control,
        .register-container .form-select {
            padding: 10px;
            height: auto;
            border-radius: 4px;
            margin-bottom: 15px;
        }

        .register-container .form-select {
            font-size: 16px;
        }

        .register-container .btn-primary {
            background-color: #ff9900;
            border: none;
            padding: 10px;
            font-size: 16px;
            font-weight: bold;
            color: white;
            width: 100%;
            margin-top: 15px;
        }

            .register-container .btn-primary:hover {
                background-color: #e68a00;
            }

        .register-container .external-logins-section {
            text-align: center;
            margin-top: 20px;
            color: #666;
        }

        .register-container .btn-external-login {
            background-color: #0073e6;
            color: #fff;
            border: none;
            padding: 10px 20px;
            margin: 5px 0;
            width: 100%;
            font-size: 14px;
            font-weight: bold;
        }

            .register-container .btn-external-login:hover {
                background-color: #005bb5;
            }
</style>

<div class="register-container">
    <h1>@ViewData["Title"]</h1>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2>Create a new account</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.Password">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Name" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.Name">Name</label>
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>



        <div class="form-floating mb-3">
            <input asp-for="Input.State" class="form-control" placeholder="Street" />
            <label asp-for="Input.State">State</label>
            <span asp-validation-for="Input.State" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.City" class="form-control" placeholder="City" />
            <label asp-for="Input.City">City</label>
            <span asp-validation-for="Input.City" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.ZipCode" class="form-control" placeholder="Zip Code" />
            <label asp-for="Input.ZipCode">Zip Code</label>
            <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Address" class="form-control" placeholder="Address" />
            <label asp-for="Input.Address">Address</label>
            <span asp-validation-for="Input.Address" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                <option disabled selected>Select Role</option>
            </select>
            <span asp-validation-for="Input.Role" class="text-danger"></span> <!-- Validation message -->
        </div>

        <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
    </form>

    <div class="external-logins-section">
        <h3>Or register with an external account</h3>
        @if ((Model.ExternalLogins?.Count ?? 0) == 0)
        {
            <p>No external authentication services available.</p>
        }
        else
        {
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                @foreach (var provider in Model.ExternalLogins!)
                {
                    <button type="submit" class="btn-external-login" name="provider" value="@provider.Name">
                        Log in with @provider.DisplayName
                    </button>
                }
            </form>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
